    <main id="profile-section">
        <div class="profile-container">
            <div class="profile-header">
                <h2 class="section-title">Address</h2>
            </div>
            
            <form id="addAddress" method="post" action="/address/add/<%= user._id %>">

                <input type="hidden" id="userId" name="userId" value="<%= user.id %>">

                <div class="form-group">
                    <label for="housename">House Name</label>
                    <input type="text" id="housename" name="housename">
                </div>
                
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" id="city" name="city">
                </div>

                <div class="form-group">
                    <label for="district">District</label>
                    <input type="text" id="district" name="district">
                </div>

                <div class="form-group">
                    <label for="state">State</label>
                    <input type="text" id="state" name="state">
                </div>

                <div class="form-group">
                    <label for="country">Country</label>
                    <input type="text" id="country" name="country">
                </div>

                <div class="form-group">
                    <label for="pincode">Pin Code</label>
                    <input type="tel" id="pincode" name="pincode" maxlength="6">
                </div>

                <button type="submit" class="submit-btn">Add Address</button>
            </form>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

            document.getElementById("addAddress").addEventListener("submit",async(e)=>{
                if(!addAddressValidate()){
                    e.preventDefault()
                }
            })
        
            function addAddressValidate(){

            const housename = document.getElementById("housename").value;
            const city = document.getElementById("city").value;
            const district = document.getElementById("district").value;
            const state = document.getElementById("state").value;
            const country = document.getElementById("country").value;
            const pincode = document.getElementById("pincode").value;
            const fullreg=/^[A-Za-z\s]+$/
            const pinreg=/^\d{6}$/

            if(housename.trim()==""||city.trim==""||district.trim==""||state.trim()==""||pincode.trim()==""){
                Swal.fire({
                    icon: 'error',
                    text: 'Please fill all the fields!'
                })
                return
            }
            if (
                !fullreg.test(housename) ||
                !fullreg.test(city) ||
                !fullreg.test(district) ||
                !fullreg.test(state) ||
                !fullreg.test(country)
            ) {
                Swal.fire({
                    icon: 'error',
                    text: 'These fields should only contain alphabets!',
                });
                return;
             } 
            if(!pinreg.test(pincode)){
                    Swal.fire({
                        icon: 'error',
                        text: 'Pin Code should be a six-digit number!'
                    })
                        return
                }   
                return true;
            }

    </script>
