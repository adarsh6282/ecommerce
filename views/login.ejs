<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome Back - Luxury Shoes</title>
    <link rel="stylesheet" href="css/login.css">
</head>

<body>
    <div class="container">
        <section class="login-section">
            <a href="#" class="back-arrow">‚Üê</a>
            <div class="login-content">
                <h1>Welcome back!</h1>
                <p>Enter your Credentials to access your account</p>

                <form id="form" method="post" action="/login">
                    <div class="form-group">
                        <label>Email address</label>
                        <input type="email" placeholder="name@email.com" id="email" name="email">
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" placeholder="Enter your password" id="password" name="password">
                        <div class="forgot-password">
                            <a href="/forgotpassword">Forgot password</a>
                        </div>
                    </div>
                    <p id="para" style="color: red;"><%= message %></p>

                    <button id="btn" type="submit" class="login-button">Login</button>
                </form>

                <div class="signup-link">
                    Don't have an account? <a href="/register">Sign Up</a>
                </div>
            </div>
        </section>

        <section class="image-section">
            <div class="shoe-gallery">
                <img src="images/mainshoe.jpeg" alt="Luxury Red Oxford" class="shoe-item">
            </div>
        </section>
    </div>


    <script>

        document.getElementById("form").addEventListener("submit", (e) => {
           
            if (!loginvalidate()) {
                e.preventDefault()
            }
        })

        function loginvalidate() {
            let email = document.getElementById("email").value
            let password = document.getElementById("password").value
            const emailreg = /^[^\s@]+@[^\s@]+\.[^\s@]+$/
            const passreg = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{6,}$/
            let msg = document.getElementById("para")
            if (email.trim() == "" || password.trim() == "") {
                msg.innerHTML = "These fields are required"
                return false
            } else if (!emailreg.test(email)) {
                msg.innerHTML = "Email format is not supported"
                return false
            } else if (!passreg.test(password)) {
                msg.innerHTML = "Password format is not supported"
                return false
            }
            else {
                msg.innerHTML=""
                msg.style.display = "none"
                return true
            }
        }

    </script>
</body>

</html>