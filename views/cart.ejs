							</div>
						</div>
						<% items.forEach(item => { %>
						<div class="product-cart d-flex">
							<div class="one-forth">
								<div class="product-img">
									<img src="<%= item.productId.images[0] %>" alt="Image" class="img-fluid">
								</div>
								<div class="display-tc">
									<h3><%= item.productId.name %></h3>
								</div>
							</div>
							<div class="one-eight text-center">
