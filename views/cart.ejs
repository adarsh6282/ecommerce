	<script>

		document.querySelectorAll(".closebtn").forEach(button=>{
			button.addEventListener("click", async(e)=>{
				e.preventDefault()

				const itemId=button.getAttribute("data-id")
                const response=await fetch("/cart/remove",{
					method:"DELETE",
					headers:{
						"Content-Type":"application/json"
                    },
					body:JSON.stringify({itemId})
				})
				const result=await response.json()
				if(result.success){
					Swal.fire({
						title: result.message,
                        icon: "success",
					})
					setTimeout(() => {
						window.location.reload()
					}, 1000);
					} else {
						Swal.fire({
                        title: result.message || "Failed to remove item from cart",
                        icon: "error",
                    })
				}
            })
		})
</script>




<script>
	document.querySelectorAll(".input-number").forEach(function(input) {
	  input.addEventListener('input', async function(event) {
		let quantity = parseInt(event.target.value);
		const productCart = event.target.closest(".product-cart");
		const productId = event.target.closest('.product-cart').querySelector('.closed').getAttribute('data-id');
		const maxAllowed = parseInt(productCart.querySelector(".input-number").getAttribute("data-max"));
		console.log(maxAllowed)
		const maxQuantity=10

		if (quantity > maxQuantity) {
      swal.fire({
		    title: 'Quantity Limit Exceeded',
            text: `You cannot order more than ${maxQuantity} of this product.`,
            icon: 'error',
            confirmButtonText: 'Okay'
	  })
      event.target.value = maxQuantity; 
      quantity = maxQuantity; 
    }

    if (quantity > maxAllowed) {
      swal.fire({
		    title: 'Quantity Limit Exceeded',
            text: `You cannot order more than ${maxAllowed} of this product (only ${maxAllowed} available).`,
            icon: 'error',
            confirmButtonText: 'Okay'
	  })
      event.target.value = maxAllowed; 
      quantity = maxAllowed; 
    }

		
		try {
		  const response = await fetch('/updatecart', {
			method: 'POST',
			headers: {
			  'Content-Type': 'application/json'
			},
			body: JSON.stringify({ productId: productId, quantity: quantity })
		  });
  
		  const data = await response.json();

		  const newTotalPrice = data.updatedPrice;
		  const productCart = event.target.closest('.product-cart');

		  productCart.querySelector('.pricetot').innerText = '₹' + newTotalPrice.toFixed(2);

		  updateCartTotal();
		} catch (error) {
		  console.error('Error updating cart:', error);
		}
	  });
	});

	function updateCartTotal() {
	  let total = 0;

	  document.querySelectorAll('.product-cart').forEach(function(product) {
		const quantity = parseInt(product.querySelector('.input-number').value);
		const price = parseFloat(product.querySelector('.price').innerText.replace('₹', ''));
		const totalPrice = price * quantity;

		total += totalPrice;
	  });
	  
	  document.querySelector('#grandtotal').innerText = '₹' + total.toFixed(2);
	}
  </script>
  

