<!-- Filter -->
<div class="dis-none panel-filter w-full p-t-10">
    <div class="wrap-filter bg6 w-full p-lr-40 p-t-27 p-lr-15-sm" 
         style="display: flex; justify-content: space-between; gap: 20px; flex-wrap: wrap;">

