						const searchValue = this.value.trim(); 
						if (searchValue) { 
							window.location.href = `/shop?<%= sortBy %>&category=<%= selectedCategory %>&priceRange=<%= priceRange %>&search=${searchValue}`;
						} else { 
							window.location.href = '/shop'; 
						} 
					}">
			</div>  
		</div>

        <!-- Sort By Section -->
        <div class="filter-col1 p-r-15 p-b-27" 
             style="flex: 1; min-width: 200px;">
            <div class="mtext-102 cl2 p-b-15" style="font-weight: bold;">Sort By</div>
            <ul style="list-style: none; padding: 0;">
                <li class="p-b-6">
                    <a href="/shop?sortBy=default&category=<%= selectedCategory %>&priceRange=<%= priceRange %>&search=<%= search %>"
                        class="filter-link stext-106 trans-04 <% if(sortBy === 'default' || !sortBy) { %>filter-link-active<% } %>">
                        Default
                    </a>
                </li>
                <li class="p-b-6">
                    <a href="/shop?sortBy=popularity&category=<%= selectedCategory %>&priceRange=<%= priceRange %>&search=<%= search %>"
                        class="filter-link stext-106 trans-04 <% if(sortBy === 'popularity') { %>filter-link-active<% } %>">
                        Popularity
                    </a>
                </li>
                <li class="p-b-6">
                    <a href="/shop?sortBy=average-rating&category=<%= selectedCategory %>&priceRange=<%= priceRange %>&search=<%= search %>"
                        class="filter-link stext-106 trans-04 <% if(sortBy === 'average-rating') { %>filter-link-active<% } %>">
                        Average Rating
                    </a>
                </li>
                <li class="p-b-6">
                    <a href="/shop?sortBy=latest&category=<%= selectedCategory %>&priceRange=<%= priceRange %>&search=<%= search %>"
                        class="filter-link stext-106 trans-04 <% if(sortBy === 'latest') { %>filter-link-active<% } %>">
                        Latest
                    </a>
                </li>
                <li class="p-b-6">
                    <a href="/shop?sortBy=price-low-to-high&category=<%= selectedCategory %>&priceRange=<%= priceRange %>&search=<%= search %>"
                        class="filter-link stext-106 trans-04 <% if(sortBy === 'price-low-to-high') { %>filter-link-active<% } %>">
                        Price: Low to High
                    </a>
                </li>
                <li class="p-b-6">
                    <a href="/shop?sortBy=price-high-to-low&category=<%= selectedCategory %>&priceRange=<%= priceRange %>&search=<%= search %>"
                        class="filter-link stext-106 trans-04 <% if(sortBy === 'price-high-to-low') { %>filter-link-active<% } %>">
                        Price: High to Low
                    </a>
                </li>
            </ul>
        </div>

        <!-- Category Filter Section -->
        <div class="filter-col3 p-b-27" 
             style="flex: 1; min-width: 200px;">
            <div class="mtext-102 cl2 p-b-15" style="font-weight: bold;">Category</div>
            <ul style="list-style: none; padding: 0;">
                <li class="p-b-6">
                    <a href="/shop?sortBy=<%= sortBy %>&priceRange=<%= priceRange %>&search=<%= search %>"
                        class="filter-link stext-106 trans-04 <% if(!selectedCategory) { %>filter-link-active<% } %>">
                        All Categories
                    </a>
                </li>
                <% categories.forEach(category => { %>
                <li class="p-b-6">
                    <a href="/shop?category=<%= category.name %>&sortBy=<%= sortBy %>&priceRange=<%= priceRange %>&search=<%= search %>"
                        class="filter-link stext-106 trans-04 <% if(category.name === selectedCategory) { %>filter-link-active<% } %>">
                        <%= category.name %>
                    </a>
                </li>
                <% }); %>
            </ul>
        </div>

        <!-- Price Filter Section -->
        <div class="filter-col2 p-r-15 p-b-27" 
             style="flex: 1; min-width: 200px;">
            <div class="mtext-102 cl2 p-b-15" style="font-weight: bold;">Price</div>
            <ul style="list-style: none; padding: 0;">
